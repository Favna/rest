{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"outDir": "./dist",
		"sourceMap": true,
		"types": ["node", "node-fetch"],
        "declaration": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "target": "esnext",
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"bin",
		"examples",
		"scripts"
	],
	"include": [
		"./src/**/*"
	]
}